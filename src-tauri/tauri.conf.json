{
  "build": {
    "beforeBuildCommand": "pnpm run build",
    "beforeDevCommand": "pnpm run dev",
    "devPath": "http://localhost:5173",
    "distDir": "../dist",
    "withGlobalTauri": false
  },
  "package": {
    "productName": "视频下载工具",
    "version": "4.0.4"
  },
  "tauri": {
    "allowlist": {
      "all": false,
      "dialog": {
        "all": false,
        "open": true,
        "save": false
      },
      "fs": {
        "all": false,
        "readFile": true,
        "writeFile": true,
        "readDir": true,
        "createDir": true,
        "removeFile": true,
        "exists": true,
        "scope": [
          "$APPDATA/*",
          "$DOWNLOAD/*",
          "$RESOURCE/*"
        ]
      },
      "shell": {
        "all": false,
        "open": true
      },
      "process": {
        "all": false,
        "relaunch": false,
        "exit": true
      }
    },
    "bundle": {
      "active": true,
      "category": "Utility",
      "copyright": "Copyright © 2024",
      "deb": {
        "depends": []
      },
      "externalBin": [],
      "icon": [
        "icons/32x32.png",
        "icons/128x128.png",
        "icons/128x128@2x.png",
        "icons/icon.png",
        "icons/icon.ico"
      ],
      "identifier": "com.youtube.downloader",
      "longDescription": "一个基于 Tauri + React 的桌面应用程序，主打 YouTube 视频下载，同时支持 1000+ 视频网站（包括 Bilibili、Twitter、TikTok 等）。",
      "macOS": {
        "entitlements": null,
        "exceptionDomain": "",
        "frameworks": [],
        "providerShortName": null,
        "signingIdentity": null,
        "minimumSystemVersion": "10.13"
      },
      "resources": [
        "resources/*"
      ],
      "shortDescription": "视频下载工具 - 支持 YouTube 等 1000+ 网站",
      "targets": [
        "msi",
        "nsis",
        "deb",
        "appimage",
        "dmg"
      ],
      "windows": {
        "certificateThumbprint": null,
        "digestAlgorithm": "sha256",
        "timestampUrl": "",
        "wix": {
          "language": "zh-CN"
        }
      }
    },
    "security": {
      "csp": null
    },
    "updater": {
      "active": false
    },
    "windows": [
      {
        "fullscreen": false,
        "resizable": true,
        "title": "视频下载工具",
        "width": 1000,
        "height": 700,
        "minWidth": 800,
        "minHeight": 600
      }
    ]
  }
}
