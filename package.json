{
  "name": "youtube-downloader-tool",
  "version": "4.0.3",
  "description": "基于 Tauri + React 的视频下载工具",
  "type": "module",
  "packageManager": "pnpm@9.15.4",
  "scripts": {
    "dev": "vite",
    "build": "tsc && vite build",
    "preview": "vite preview",
    "tauri": "tauri",
    "tauri:dev": "tauri dev",
    "tauri:dev:clean": "powershell -ExecutionPolicy Bypass -File ./dev-clean.ps1",
    "tauri:build": "tauri build",
    "tauri:build:clean": "powershell -ExecutionPolicy Bypass -File ./build-clean.ps1",
    "lint": "eslint . --ext ts,tsx --report-unused-disable-directives --max-warnings 0",
    "format": "prettier --write \"src/**/*.{ts,tsx,js,jsx,json,css}\"",
    "test": "vitest --run",
    "test:watch": "vitest",
    "test:all": "pnpm test && pnpm lint && tsc --noEmit && cd src-tauri && cargo test --lib && cargo clippy --lib -- -D warnings",
    "setup:hooks": "simple-git-hooks",
    "release": "release-it",
    "release:minor": "release-it minor",
    "release:major": "release-it major",
    "release:patch": "release-it patch",
    "release:dry": "release-it --dry-run"
  },
  "simple-git-hooks": {
    "pre-commit": "pnpm test:all"
  },
  "dependencies": {
    "@radix-ui/react-dialog": "^1.0.5",
    "@radix-ui/react-dropdown-menu": "^2.0.6",
    "@radix-ui/react-progress": "^1.0.3",
    "@radix-ui/react-select": "^2.0.0",
    "@radix-ui/react-slot": "^1.0.2",
    "@radix-ui/react-toast": "^1.1.5",
    "@tauri-apps/api": "^1.5.3",
    "class-variance-authority": "^0.7.0",
    "clsx": "^2.1.0",
    "lucide-react": "^0.309.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-window": "^2.2.5",
    "tailwind-merge": "^2.2.0",
    "zustand": "^4.4.7"
  },
  "devDependencies": {
    "@eslint/js": "^9.39.2",
    "@fast-check/vitest": "^0.2.4",
    "@release-it/conventional-changelog": "^10.0.4",
    "@tauri-apps/cli": "^1.5.9",
    "@testing-library/jest-dom": "^6.2.0",
    "@testing-library/react": "^14.1.2",
    "@testing-library/user-event": "^14.6.1",
    "@types/node": "^20.11.5",
    "@types/react": "^18.2.48",
    "@types/react-dom": "^18.2.18",
    "@typescript-eslint/eslint-plugin": "^8.0.0",
    "@typescript-eslint/parser": "^8.0.0",
    "@vitejs/plugin-react": "^4.2.1",
    "autoprefixer": "^10.4.17",
    "eslint": "^9.0.0",
    "eslint-plugin-react-hooks": "^5.0.0",
    "eslint-plugin-react-refresh": "^0.4.5",
    "fast-check": "^4.5.3",
    "jsdom": "^27.4.0",
    "postcss": "^8.4.33",
    "prettier": "^3.2.4",
    "release-it": "^19.2.4",
    "simple-git-hooks": "^2.13.1",
    "tailwindcss": "^3.4.1",
    "tailwindcss-animate": "^1.0.7",
    "typescript": "^5.3.3",
    "vite": "^5.0.12",
    "vitest": "^1.2.1"
  }
}
